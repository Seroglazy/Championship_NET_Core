@using Microsoft.AspNetCore.Http

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="masthead mb-auto p-3">
        <div class="nav mb-auto p-1">
            <h3 class="masthead-brand"></h3>
            <nav class="nav nav-masthead">
                <a class="nav-link" href="/">Главная</a>
                <a class="nav-link" href="/Players/PlayersList">Игроки</a>
                <a class="nav-link" href="/Matches/MatchesList">Матчи</a>
                @if (Context.Session.GetString("LoggedPlayer") != null)
                {
                    <a class="nav-link" asp-controller="Players" asp-action="Account">Личный кабинет</a>
                }
                else
                {
                    <a class="nav-link" asp-controller="Players" asp-action="PlayerAdd">Регистрация</a>
                    <a class="nav-link" asp-controller="Players" asp-action="PlayerLogin">Вход</a>
                }
            </nav>
        </div>
    </header>
    @RenderBody()
    <footer class="mastfoot mt-auto">
        <div class=" p-2 inner">
            <p>@DateTime.Now.Year </p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)


</body>
</html>
