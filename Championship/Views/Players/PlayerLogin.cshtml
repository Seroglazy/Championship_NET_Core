@model Players

<div class="modal-header">
    <h4>Вход</h4>
</div>
<div class="modal-body">
    <form asp-controller="Players" asp-action="PlayerLoginPost" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Profile">Имя профиля:</label>
            <input type="text" class="form-control col-sm-7" asp-for="Profile" id="Profile" placeholder="" name="Profile">
            <span asp-validation-for="Profile" class="text-danger"></span>
        </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" asp-for="Pass">Пароль:</label>
                    <input type="password" class="form-control col-sm-7" asp-for="Pass" id="Pass" placeholder="" name="Pass">
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                        <input class="btn-default col-sm-offset-2 col-sm-2" type="submit" value="Вход" />
</form>
</div>